<div id="settings" class="container">
    <%- include('partials/header', { showScore: false }) %>
        <h2>Math Practice</h2>

        <label>
            Operation:
            <br />
            <label class="checkboxLabel"><input type="checkbox" class="operation" value="+" checked>
                <span>+</span></label>
            <label class="checkboxLabel"><input type="checkbox" class="operation" value="-"> <span>-</span></label>
            <label class="checkboxLabel"><input type="checkbox" class="operation" value="*"> <span>x</span></label>
            <label class="checkboxLabel"><input type="checkbox" class="operation" value="/"> <span>รท</span></label>
        </label>
        <br><br>

        <label>
            Range of numbers:
            <br />
            <label class="checkboxLabel"><input type="radio" name="numberRange" class="main-number" value="10" checked>
                <span>0 - 10</span> </label>
            <label class="checkboxLabel"><input type="radio" name="numberRange" class="main-number" value="100"> <span>0
                    - 100</span> </label>
            <label class="checkboxLabel"><input type="radio" name="numberRange" class="main-number" value="1000">
                <span>0 - 1000</span> </label>
        </label>
        <br><br>

        <div class="button-container">
            <button id="startButton">Start</button>
        </div>
</div>

<div id="game" class="container">
    <%- include('partials/header', { backLink: '#' , backText: 'Back' }) %>
        <h1 id="question"></h1>
        <div id="answerInputs">
            <input type="number" id="answer">
        </div>
        <br />
        <div class="button-container">
            <button id="submitAnswer">Submit</button>
            <button id="newQuestion">New Question</button>
        </div>
        <%- include('partials/feedback') %>
            <%- include('partials/logs') %>
</div>

<%- contentFor('scripts') %>
    <script src="/js/math.js"></script>